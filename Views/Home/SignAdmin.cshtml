@model LoginAdmin
@{
    ViewData["Title"] = "Login";
}

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        .gradient-custom {
            background: #6a11cb;
            background: -webkit-linear-gradient(to right, rgba(106, 17, 203, 1), rgba(37, 117, 252, 1));
            background: linear-gradient(to right, rgba(106, 17, 203, 1), rgba(37, 117, 252, 1));
        }
    </style>
</head>
<body class="gradient-custom">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5 mt-5">
            <div class="card bg-dark text-white" style="border-radius: 1rem;">
                <div class="card-body p-5 text-center">
                    <h2 class="fw-bold mb-2 text-uppercase" style="color: #CBC3E3;">Login</h2>
                    <p class="text-white-50 mb-5">Please enter your login and password!</p>
                    <form method="post">
                        <div class="form-outline mb-4">
                            <input asp-for="EmployeeID" type="email" id="form2Example1" class="form-control" style="color: orange;" required />
                            <span asp-validation-for="EmployeeID" class="text-danger"></span>
                            <label class="form-label" for="form2Example1" style="color: orange;">Admin ID</label>
                        </div>
                        <div class="form-outline mb-4">
                            <input asp-for="Password" type="password" id="form2Example2" class="form-control" style="color: orange;" required />
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <label class="form-label" for="form2Example2" style="color: orange;">Password</label>
                        </div>
                        <div class="row mb-4">
                            <div class="col d-flex justify-content-center">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="form2Example31" checked />
                                    <label class="form-check-label" for="form2Example31" style="color: orange;">Remember Me</label>
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block mb-4">Log in</button>
                    </form>
                    <p style="color: orange; font-family: Georgia, serif; padding-left: 30px;">Not a user? <a style="color: orange;" asp-controller="Home" asp-action="Signup">Register Here</a></p>
                </div>
            </div>
        </div>
    </div>  
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    @* <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script> *@
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
