@model LoginEmployee
@{
    ViewData["Title"] = "Signup";
}

<body background="https://memberclicks.com/wp-content/uploads/2021/12/welcome_new_members-scaled.jpg">

    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            <div class="col-md-4 col-md-offset-4">
                                <h1>REGISTRATION</h1>
                            </div>
                        </header>

                        <div class="panel-body">
                            <form method="post" id="registrationForm">
                                <div class="row">
                                    <div class="col-md-4 col-md-offset-1">
                                        <div class="form-group">
                                            <label for="EmployeeName"><b>Employee Name</b></label><br />
                                            <input type="text" id="EmployeeName" name="EmployeeName" class="form-control input-sm"
                                                placeholder="Employee Name" required />
                                        </div>
                                    </div>
                    
                                    <div class="col-md-4 col-md-offset-1">
                                        <div class="form-group">
                                            <label for="EmployeeID"><b>Employee ID</b></label><br />
                                            <input type="text" id="EmployeeID" name="EmployeeID" class="form-control input-sm"
                                                placeholder="Employee ID" required />
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-4 col-md-offset-1">
                                        <div class="form-group">
                                            <label for="DOB"><b>DOB</b></label><br />
                                            <input type="date" id="DOB" name="DOB" class="form-control input-sm" required />
                                        </div>
                                    </div>

                                    <div class="col-md-4 col-md-offset-1">
                                        <div class="form-group">
                                            <label for="Department"><b>Department</b></label><br />
                                            <input type="text" id="Department" name="Department" class="form-control input-sm"
                                                placeholder="Department" required />
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-4 col-md-offset-1">
                                        <div class="form-group">
                                            <label for="Country"><b>Country</b></label><br />
                                            <select id="Country" name="Country" class="form-control input-sm" required>
                                                <option value="India">India</option>
                                                <option value="South Korea">South Korea</option>
                                                <option value="Russia">Russia</option>
                                                <option value="USA">USA</option>
                                                <option value="Nepal">Nepal</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="col-md-4 col-md-offset-1">
                                        <div class="form-group">
                                            <label for="Address"><b>Address</b></label><br />
                                            <input type="text" id="Address" name="Address" class="form-control input-sm"
                                                placeholder="Address" required />
                                        </div>
                                    </div>
                                </div>

                                <!-- Submit button -->
                                <div class="row">
                                    <div class="col-md-4 col-md-offset-4">
                                        <button type="submit" class="btn btn-primary btn-block">Register</button>
                                    </div>
                                </div>
                            </form>
                        </div>

                    </section>
                </div>
            </div>
        </section>
    </section>
</body>
