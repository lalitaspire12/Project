@model Car;
@{
    ViewData["Title"]="Add New Car";
}
<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
        <div class="mt-3 p-3 shadow rounded">
            <div class="text-center">
                <h2 class="text-info">Add new Car</h2>
            </div>
            <div>
                @Html.ValidationSummary()
            </div>
            <div class="mt-3 p-3">
                <form action="Add" method="post" >
                    @* <div class="mb-3 row">
                    <label class="col-3 col-form-label text-info">Id</label>
                    <div class="col-9">
                        @Html.TextBoxFor(m=>m.VehicleId, new {@class="form-control",placeholder="Enter Id"})
                    </div>
                </div> *@
                <div class="mb-3 row">
                    <label class="col-3 col-form-label text-info">CarType</label>
                    <div class="col-9">
                        @Html.TextBoxFor(m => m.CarType , new {@class="form-control",placeholder="Enter Type"})
                    </div>
                </div>
                 <div class="mb-3 row">
                    <label class="col-3 col-form-label text-info">CarNumber</label>
                    <div class="col-9">
                        @Html.TextBoxFor(m=>m.CarNumber, new {@class="form-control",placeholder="Enter Number"})
                    </div>
                </div>
                 <div class="mb-3 row">
                    <label class="col-3 col-form-label text-info">SeatingCapacity</label>
                    <div class="col-9">
                        @Html.TextBoxFor(m=>m.SeatingCapacity, new {@class="form-control",placeholder="Enter SeatingCapacity"})
                    </div>
                </div>
                 <div class="mb-3 row">
                    <label class="col-3 col-form-label text-info">PickUp</label>
                    <div class="col-9">
                        @Html.TextBoxFor(m=>m.PickUp, new {@class="form-control",placeholder="Enter SeatingCapacity"})
                    </div>
                </div>
                 <div class="mb-3 row">
                    <label class="col-3 col-form-label text-info">Dropoff</label>
                    <div class="col-9">
                        @Html.TextBoxFor(m=>m.DropOff, new {@class="form-control",placeholder="Enter SeatingCapacity"})
                    </div>
                </div>
                 <div class="mb-3 row">
                    <label class="col-3 col-form-label text-info">FuelType</label>
                    <div class="col-9">
                        <select name="FuelType" class="form-select">
                            <option value="">Select FuelType</option>
                            <option value="Petrol">Petrol</option>
                           <option value="Diesel">Diesel</option>
                           <option value="Electric">Electric</option>
                        </select>
                    </div>
                </div>
                 <div class="mb-3 row">
                    <label class="col-3 col-form-label text-info">Date</label>
                    <div class="col-9">
                        @Html.TextBoxFor(m=>m.Date, new {@class="form-control",placeholder="Enter Date"})
                    </div>
                
                <div class="mb-3">
                    <button class="btn btn-sm shadow rounded p-2 btn-dark" type="submit">Clear</button>
                    <button class="btn btn-sm shadow rounded p-2 btn-success" type="submit">Add</button>
                </div>

                </form>

            </div>
</div>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script type="text/javascript"> 
    function showAleart(){
        if(@ViewBag.isSaved){
            if('@ViewBag.isSaved'=='True'){            
            alert("New Car Successfully Added!")
        }
        }
    }
    $(document).ready(function(){
        showAleart();

    })
</script>