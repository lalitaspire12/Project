@model IEnumerable<VEHCILE.Models.Car>

@{
    ViewData["Title"]="Car";
}

<style>
    body{
        @* background-image: url("https://wallpapercave.com/wp/wp8264572.jpg"); *@
        background-color: #6c757d;
    }
    table.text-info text-center{

        margin-left: auto; 
        margin-right: auto;
    }
</style>

<div class="container" style="background-color: #e9ecef;>
    <div class="row" style="color:black">
        <div class="col-12">
            <div class="mt-3 p-3 shadow rounded">
                <div class="d-flex justify-content-between nb-3 p-3">
                    <h3 class="text-info"> Car List</h3>
                    @Html.ActionLink("Add new Car","Add","Car",null)
                </div>
                <div class="p-3">
                    <table class="table table responsive table-bordered text-info text-center">
                        <thread>
                            <tr>
                                <th>CarType</th>
                                <th>CarNumber</th>
                                <th>SeatingCapacity</th>
                                <th>FuelType</th>
                                <th>PickUp</th>
                                <th>DropOff</th>
                                <th>Update</th>
                                <th>Delete</th>
                            </tr>
                        </thread>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                @* <td>@item.VehicleId</td> *@
                                <td>@item.CarType</td>
                                <td>@item.CarNumber</td>
                                <td>@item.SeatingCapacity</td>
                                <td>@item.FuelType</td>
                                <td>@item.PickUp</td>
                                <td>@item.DropOff</td>
                                @* <td>@item.Date</td> *@
                                <td><a asp-controller="Car" asp-action="Update" asp-route-id=@item.CarNumber>Update</a></td>
                                <td><a asp-controller="Car" asp-action="Delete" asp-route-id=@item.CarNumber>Delete</a></td>
                                </tr>                                
                            }
                            
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
