@model IEnumerable<VEHCILE.Models.Driver>

@{
    ViewData["Title"]="Driver";
}
<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="mt-3 p-3 shadow rounded">
                <div class="d-flex justify-content-between nb-3 p-3">
                    <h3 class="text-info"> Driver List</h3>
                    @Html.ActionLink("Add new Driver","Add","Driver",null)
                </div>
                <div class="p-3">
                    <table class="table table responsive table-bordered text-info text-center">
                        <thread>
                            <tr>
                                <th>EmployeeID</th>
                                <th>Name</th>
                                <th>PhoneNumber</th> 
                                <th>Edit</th>
                                <th>Delete</th>                              
                            </tr>
                        </thread>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                <td>@item.EmployeeID</td>
                                <td>@item.Name</td>
                                <td>@item.PhoneNumber</td>
                                <td><a asp-controller="Driver" asp-action="UpdateDriver" asp-route-id=@item.EmployeeID>Update</a></td>
                                <td><a asp-controller="Driver" asp-action="DeleteDriver" asp-route-id=@item.EmployeeID>Delete</a></td>
                                </tr>                                
                            }
                            
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
